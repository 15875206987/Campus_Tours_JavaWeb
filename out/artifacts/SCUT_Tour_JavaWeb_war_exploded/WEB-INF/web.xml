<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    得到生活种类-->
    <servlet>
        <servlet-name>getLivingCategories</servlet-name>
        <servlet-class>com.UniversityMap.servlet.getLivingCategories</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getLivingCategories</servlet-name>
        <url-pattern>/getlivingcategories</url-pattern>
    </servlet-mapping>
<!--得到学习种类-->
    <servlet>
        <servlet-name>getStudyCategories</servlet-name>
        <servlet-class>com.UniversityMap.servlet.getStudyCategories</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getStudyCategories</servlet-name>
        <url-pattern>/getstudycategories</url-pattern>
    </servlet-mapping>
<!--得到所有标记地点-->
    <servlet>
        <servlet-name>getMarkerPoints</servlet-name>
        <servlet-class>com.UniversityMap.servlet.getMarkerPoints</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMarkerPoints</servlet-name>
        <url-pattern>/getmarkerpoints</url-pattern>
    </servlet-mapping>
<!--添加标记地点-->
    <servlet>
        <servlet-name>addSite</servlet-name>
        <servlet-class>com.UniversityMap.servlet.addSite</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addSite</servlet-name>
        <url-pattern>/addsite</url-pattern>
    </servlet-mapping>
<!--    删除标记地点-->
    <servlet>
        <servlet-name>removeSite</servlet-name>
        <servlet-class>com.SitesManagement.servlet.removeSite</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeSite</servlet-name>
        <url-pattern>/removesite</url-pattern>
    </servlet-mapping>
<!--    获取院系列表-->
    <servlet>
        <servlet-name>getSchoolList</servlet-name>
        <servlet-class>com.SchoolIntro.servlet.getSchoolList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getSchoolList</servlet-name>
        <url-pattern>/getschoollist</url-pattern>
    </servlet-mapping>

<!--    获取专业列表-->
    <servlet>
        <servlet-name>getMajorList</servlet-name>
        <servlet-class>com.SchoolIntro.servlet.getMajorList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMajorList</servlet-name>
        <url-pattern>/getmajorlist</url-pattern>
    </servlet-mapping>

<!--    添加专业-->
    <servlet>
        <servlet-name>addMajor</servlet-name>
        <servlet-class>com.SchoolIntro.servlet.addMajor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addMajor</servlet-name>
        <url-pattern>/addmajor</url-pattern>
    </servlet-mapping>

<!--    以下是微信小程序接口的Servlet配置-->
    <servlet>
        <servlet-name>getMarkers</servlet-name>
        <servlet-class>com.Wechat.servlet.getMarkers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMarkers</servlet-name>
        <url-pattern>/getmarkers</url-pattern>
    </servlet-mapping>
</web-app>